<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@modena_dark.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <Label text="Inventory Management System" textFill="#5d9dfc" BorderPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="24.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </padding>
            </Label>
         </top>
         <center>
            <TabPane fx:id="tabPane" prefHeight="313.0" prefWidth="608.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                <Tab fx:id="partsTab" text="Parts">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <top>
                                    <HBox alignment="CENTER_RIGHT" prefHeight="33.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                                       <children>
                                          <ToolBar prefHeight="39.0" prefWidth="1092.0">
                                            <items>
                                                <Label text="Parts Management" textFill="#da535c">
                                                   <padding>
                                                      <Insets left="10.0" />
                                                   </padding>
                                                   <font>
                                                      <Font size="18.0" />
                                                   </font>
                                                </Label>
                                                <Region prefHeight="27.0" prefWidth="492.0" />
                                                <Button fx:id="buttonClearSearch" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clearTextFieldPartSearch" prefHeight="26.0" prefWidth="0.0" styleClass="buttonSearchClear">
                                                <graphic>
                                                    <FontAwesomeIconView styleClass="buttonSearchClearIcon" />
                                                </graphic>
                                                </Button>
                                                <CustomTextField fx:id="textFieldPartSearch" prefHeight="27.0" prefWidth="250.0" styleClass="searchField">
                                                    <left>
                                                        <Label styleClass="searchBoxLabel">
                                                            <graphic>
                                                                <FontAwesomeIconView styleClass="searchBoxLabelIcon" />
                                                            </graphic>
                                                        </Label>
                                                    </left>
                                                </CustomTextField>
                                                <Button fx:id="buttonSearchDown" mnemonicParsing="false" styleClass="buttonSearchDown" />
                                                <Label fx:id="labelSearchResults">
                                                </Label>
                                            </items>
                                          </ToolBar>
                                       </children>
                                    </HBox>
                                 </top>
                                 <bottom>
                                    <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                      <buttons>
                                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showAddPart" text="Add" />
                                          <Button fx:id="partModifyButton" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#modifyPartButtonPressed" text="Modify" />
                                          <Button fx:id="partDeleteButton" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#deletePartButtonPressed" text="Delete" />
                                      </buttons>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </ButtonBar>
                                 </bottom>
                                 <center>
                                    <TableView fx:id="partTableView" onMouseClicked="#userClickedOnPartTable" BorderPane.alignment="CENTER">
                                      <columns>
                                        <TableColumn fx:id="partIDColumn" prefWidth="250.0" text="Part ID" />
                                        <TableColumn fx:id="partNameColumn" prefWidth="250.0" text="Part Name" />
                                          <TableColumn fx:id="partInventoryLevelColumn" prefWidth="229.0" text="Inventory Level" />
                                          <TableColumn fx:id="priceCostColumn" prefWidth="267.0" text="Price/Cost Per Unit" />
                                      </columns>
                                    </TableView>
                                 </center>
                              </BorderPane>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab fx:id="productsTab" text="Products">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <top>
                                    <HBox alignment="CENTER_RIGHT" prefHeight="33.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                                       <children>
                                          <Label text="Product Managemnt" textFill="#da535c">
                                             <font>
                                                <Font size="18.0" />
                                             </font>
                                             <padding>
                                                <Insets left="10.0" />
                                             </padding>
                                          </Label>
                                          <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                          <Button alignment="CENTER_RIGHT" mnemonicParsing="false" prefHeight="23.0" prefWidth="61.0" text="Search" />
                                          <TextField promptText="Enter Part ID" />
                                       </children>
                                    </HBox>
                                 </top>
                                 <bottom>
                                    <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                       <buttons>
                                          <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showAddProduct" text="Add" />
                                          <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Modify" />
                                          <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Delete" />
                                       </buttons>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </ButtonBar>
                                 </bottom>
                                 <center>
                                    <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                       <columns>
                                          <TableColumn prefWidth="250.0" text="Product ID" />
                                          <TableColumn prefWidth="250.0" text="Product Name" />
                                          <TableColumn prefWidth="250.0" text="Inventory Level" />
                                          <TableColumn prefWidth="250.0" text="Price Per Unit" />
                                       </columns>
                                    </TableView>
                                 </center>
                              </BorderPane>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
